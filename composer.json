{
    "name": "midgard/midcom-project-template",
    "repositories": [
        {
            "type": "pear",
            "url": "http://pear.php.net"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "midgard/midcom": "dev-master",
        "openpsa/installer": "dev-master"
    },
    "scripts": {
        "post-install-cmd": [
            "openpsa\\installer\\installer::prepare_db",
            "openpsa\\installer\\installer::setup_root_package"
        ],
        "post-update-cmd": [
            "openpsa\\installer\\installer::setup_root_package"
        ]
    },
    "extra": {
        "midcom-static-dir": "midcom-static"
    },
    "autoload": {
        "psr-0": { "": "src/" }
    }
}
